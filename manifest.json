{
  "manifest_version": 3,
  "name": "GitHub PR Enhancer",
  "version": "1.0",
  "description": "Adds AI summaries, risk insights, and checklists to GitHub PRs",
  "permissions": ["scripting", "activeTab", "storage"],
  "host_permissions": [
    "https://github.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://github.com/*/pull/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "action": {
    "default_title": "GitHub PR Enhancer"
  }
}
